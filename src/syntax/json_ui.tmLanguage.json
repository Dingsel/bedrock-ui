{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "fileTypes": ["json"],
    "name": "Json Ui Syntax Highlight",
    "scopeName": "source.jsonui",

    "patterns": [{ "include": "#constants" }, { "include": "source.json" }],
    "repository": {
        "constants": {
            "patterns": [
                {
                    "match": "(?<=\"namespace\"\\s*:\\s*\")(\\w+)(?=\")",
                    "captures": {
                        "1": { "name": "entity.name.class" }
                    }
                },
                {
                    "name": "entity.other.attribute-name",
                    "match": "(?<=@)[^.\\s]+(?=\\.)",
                    "captures": {
                        "0": { "name": "entity.name.class" }
                    }
                },
                {
                    "name": "constant.character",
                    "match": "(?<=\\\")[^\\@]+(?=@)",
                    "captures": {
                        "1": { "name": "constant.character" }
                    }
                },
                {
                    "name": "constant.character",
                    "match": "(?<=\\.)\\w+(?=\\\")",
                    "captures": {
                        "1": { "name": "constant.character" }
                    }
                }
            ]
        }
    }
}
